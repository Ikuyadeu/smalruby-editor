  init: ()->
    @setHelpUrl('')
    @setColour(<%= colors[:looks] %>)
    @interpolateMsg(<%= bm('.rgb_led_set_color') %>,
                    ['AC', ['Dropdown', acDropdown], Blockly.ALIGN_RIGHT],
                    ['PIN', ['Dropdown', rgbLedPinDropdown], Blockly.ALIGN_RIGHT],
                    ['COLOUR', ['Colour', '#ff0000'], Blockly.ALIGN_RIGHT],
                    Blockly.ALIGN_RIGHT)
