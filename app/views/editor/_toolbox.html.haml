%xml{:id => 'toolbox', :style => 'display: none'}
  %category{:name => 'データ'}
    -# キャラクター
    %block{:type => 'variables_set'}
      %value{:name => 'VALUE'}
        %block{:type => 'data_characters'}
          %value{:name => 'COSTUME'}
            %block{:type => 'looks_preset_images'}
          %value{:name => 'X'}
            %block{:type => 'math_number'}
              %field{:name => 'NUM'}<
                0
          %value{:name => 'Y'}
            %block{:type => 'math_number'}
              %field{:name => 'NUM'}<
                0
      %field{:name => 'VAR'}<
        char1
    -# テキスト
    %block{:type => 'text'}
      %field{:name => 'TEXT'}<
        文章

    -# 数値
    %block{:type => 'math_number'}
      %field{:name => 'NUM'}<
        0

    -# プリセットの画像
    %block{:type => 'looks_preset_images'}

    -# プリセットの音
    %block{:type => 'sound_preset_sounds'}

  %category{:name => '動き'}
    -# (　)歩動かす
    %block{:type => 'motion_move'}
      %value{:name => 'STEP'}
        %block{:type => 'math_number'}
          %field{:name => 'NUM'}<
            10

    -# x座標を(　)、y座標を(　)にする
    %block{:type => 'motion_instance_variable_set_x_y'}
      %value{:name => 'X'}
        %block{:type => 'math_number'}
          %field{:name => 'NUM'}<
            0
      %value{:name => 'Y'}
        %block{:type => 'math_number'}
          %field{:name => 'NUM'}<
            0

    -# もし端に着いたら、跳ね返る
    %block{:type => 'motion_turn_if_reach_wall'}

    -# 条件:端に着いた
    %block{:type => 'motion_reach_wall'}

    -# 跳ね返る
    %block{:type => 'motion_turn'}

    -# 変数:x座標
    %block{:type => 'motion_self_x'}

    -# 変数:y座標
    %block{:type => 'motion_self_y'}

  %category{:name => '見た目'}
    -# [　]と言う
    %block{:type => 'looks_say'}
      %value{:name => 'TEXT'}
        %block{:type => 'text'}
          %field{:name => 'TEXT'}<
            こんにちは！

    -# 表示する
    %block{:type => 'looks_show'}

    -# 隠す
    %block{:type => 'looks_hide'}

  %category{:name => '音'}
    -# [▼]の音を鳴らす
    %block{:type => 'sound_play'}
      %value{:name => 'NAME'}
        %block{:type => 'sound_preset_sounds'}

  %category{:name => 'イベント'}
    -# はじまったとき
    %block{:type => 'events_on_start'}

  %category{:name => '制御'}
    -# (　)秒待つ
    %block{:type => 'control_sleep'}
      %value{:name => 'SEC'}
        %block{:type => 'math_number'}
          %field{:name => 'NUM'}<
            0

    -# ずっと
    %block{:type => 'control_loop'}

    -# もし<　>なら
    %block{:type => 'control_if'}

    -# もし<　>なら～でなければ
    %block{:type => 'control_if_else'}

  %category{:name => '演算'}
    -# 変数:(　) + (　)
    %block{:type => 'operators_add'}

    -# 変数:(　) - (　)
    %block{:type => 'operators_minus'}

    -# 変数:(　) * (　)
    %block{:type => 'operators_multiply'}

    -# 変数:(　) / (　)
    %block{:type => 'operators_divide'}

    -# 条件:(　) < (　)
    %block{:type => 'operators_compare_gt'}

    -# 条件:(　) <= (　)
    %block{:type => 'operators_compare_gte'}

    -# 条件:(　) = (　)
    %block{:type => 'operators_compare_eq'}

    -# 条件:(　) >= (　)
    %block{:type => 'operators_compare_lte'}

    -# 条件:(　) > (　)
    %block{:type => 'operators_compare_lt'}

  %category{:name => '変数', :custom => 'VARIABLE'}

  %category{:name => 'ハードウェア'}
    -# ハードウェアを準備する
    %block{:type => 'hardware_init_hardware'}

    %category{:name => 'LED'}
      -# LED[▼]をオンにする
      %block{:type => 'hardware_led_on'}

      -# LED[▼]をオフにする
      %block{:type => 'hardware_led_off'}

    %category{:name => 'ボタン'}
      -# 条件:ボタン[▼]を押している
      %block{:type => 'hardware_button_down'}

      -# 条件:ボタン[▼]を離している
      %block{:type => 'hardware_button_up'}

      -# ボタン[▼]を押したとき
      %block{:type => 'hardware_on_button_down'}

      -# ボタン[▼]を離したとき
      %block{:type => 'hardware_on_button_up'}

    %category{:name => '7セグディスプレイ'}
      -# 7セグディスプレイに[▼0-9]を表示する
      %block{:type => 'hardware_seven_segment_display_show'}

      -# 7セグディスプレイをオフにする
      %block{:type => 'hardware_seven_segment_display_off'}
