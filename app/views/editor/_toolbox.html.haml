%xml{:id => 'toolbox', :style => 'display: none'}
  %category{:name => 'データ'}
    -# キャラクター
    %block{:type => 'variables_set'}
      = toolbox_character_field
      %value{:name => 'VALUE'}
        %block{:type => 'data_characters'}
          %value{:name => 'COSTUME'}
            %block{:type => 'looks_preset_images'}
          = toolbox_number_value('X')
          = toolbox_number_value('Y')

    -# テキスト
    %block{:type => 'text'}
      %field{:name => 'TEXT'}<
        文章

    -# 数値
    %block{:type => 'math_number'}
      %field{:name => 'NUM'}<
        0

    -# プリセットの画像
    %block{:type => 'looks_preset_images'}

    -# プリセットの音
    %block{:type => 'sound_preset_sounds'}

  %category{:name => '動き'}
    -# (　)歩動かす
    %block{:type => 'motion_move'}
      = toolbox_number_value('STEP', 10)

    -# 時計回りに(　)度回す
    %block{:type => 'motion_rotate_right'}
      = toolbox_number_value('ANGLE', 15)

    -# 半時計回りに(　)度回す
    %block{:type => 'motion_rotate_left'}
      = toolbox_number_value('ANGLE', 15)

    -# (　)度に向ける
    %block{:type => 'motion_set_angle'}
      = toolbox_number_value('ANGLE', 90)

    -# マウスポインターへ向ける
    %block{:type => 'motion_point_towards_mouse'}

    -# [▼]へ向ける
    %block{:type => 'motion_point_towards_character'}
      = toolbox_character_field

    -# x座標を(　)、y座標を(　)にする
    %block{:type => 'motion_set_x_y'}
      = toolbox_number_value('X')
      = toolbox_number_value('Y')

    -# マウスポインターへ行く
    %block{:type => 'motion_go_to_mouse'}

    -# [▼]へ行く
    %block{:type => 'motion_go_to_character'}

    -# (　)秒でx座標を(　)、y座標を(　)に変える
    %block{:type => 'motion_glide_to_x_y'}
      = toolbox_number_value('SEC', 1)
      = toolbox_number_value('X')
      = toolbox_number_value('Y')

    -# x座標を(　)ずつ変える
    %block{:type => 'motion_change_x_by'}
      = toolbox_number_value('X', 10)

    -# x座標を(　)にする
    %block{:type => 'motion_set_x'}
      = toolbox_number_value('X', 0)

    -# y座標を(　)ずつ変える
    %block{:type => 'motion_change_y_by'}
      = toolbox_number_value('Y', 10)

    -# y座標を(　)にする
    %block{:type => 'motion_set_y'}
      = toolbox_number_value('Y', 0)

    -# もし端に着いたら、跳ね返る
    %block{:type => 'motion_turn_if_reach_wall'}

    -# 条件:端に着いた
    %block{:type => 'motion_reach_wall'}

    -# 跳ね返る
    %block{:type => 'motion_turn'}

    -# 回転方法を[▼]にする
    %block{:type => 'motion_set_rotation_style'}

    -# 変数:x座標
    %block{:type => 'motion_self_x'}

    -# 変数:y座標
    %block{:type => 'motion_self_y'}

    -# 変数:向き
    %block{:type => 'motion_self_angle'}

  %category{:name => '見た目'}
    -# [　]と言う
    %block{:type => 'looks_say'}
      = toolbox_text_value('TEXT', 'こんにちは！')

    -# 表示する
    %block{:type => 'looks_show'}

    -# 隠す
    %block{:type => 'looks_hide'}

  %category{:name => '音'}
    -# [▼]の音を鳴らす
    %block{:type => 'sound_play'}
      %value{:name => 'NAME'}
        %block{:type => 'sound_preset_sounds'}

  %category{:name => 'イベント'}
    -# はじまったとき
    %block{:type => 'events_on_start'}

  %category{:name => '制御'}
    -# (　)秒待つ
    %block{:type => 'control_sleep'}
      = toolbox_number_value('SEC', 1)

    -# ずっと
    %block{:type => 'control_loop'}

    -# もし<　>なら
    %block{:type => 'control_if'}

    -# もし<　>なら～でなければ
    %block{:type => 'control_if_else'}

  %category{:name => '演算'}
    -# 変数:(　) + (　)
    %block{:type => 'operators_add'}

    -# 変数:(　) - (　)
    %block{:type => 'operators_minus'}

    -# 変数:(　) * (　)
    %block{:type => 'operators_multiply'}

    -# 変数:(　) / (　)
    %block{:type => 'operators_divide'}

    -# 条件:(　) < (　)
    %block{:type => 'operators_compare_gt'}

    -# 条件:(　) <= (　)
    %block{:type => 'operators_compare_gte'}

    -# 条件:(　) = (　)
    %block{:type => 'operators_compare_eq'}

    -# 条件:(　) >= (　)
    %block{:type => 'operators_compare_lte'}

    -# 条件:(　) > (　)
    %block{:type => 'operators_compare_lt'}

  %category{:name => '変数', :custom => 'VARIABLE'}

  %category{:name => 'ハードウェア'}
    -# ハードウェアを準備する
    %block{:type => 'hardware_init_hardware'}

    %category{:name => 'LED'}
      -# LED[▼]をオンにする
      %block{:type => 'hardware_led_on'}

      -# LED[▼]をオフにする
      %block{:type => 'hardware_led_off'}

    %category{:name => 'RGB LED'}
      -# RGB LED[▼ピン]を[カラー]にする
      %block{:type => 'hardware_rgb_led_on'}

      -# RGB LED[▼ピン]をオフにする
      %block{:type => 'hardware_rgb_led_off'}

    %category{:name => '7セグディスプレイ'}
      -# 7セグディスプレイに[▼0-9]を表示する
      %block{:type => 'hardware_seven_segment_display_show'}

      -# 7セグディスプレイをオフにする
      %block{:type => 'hardware_seven_segment_display_off'}

    %category{:name => 'LCD'}
      -# LCDに(　)を表示する
      %block{:type => 'hardware_lcd_puts'}
        = toolbox_text_value('TEXT', 'Hello')

      -# LCDをクリアする
      %block{:type => 'hardware_lcd_clear'}

    %category{:name => 'ボタン'}
      -# 条件:ボタン[▼]を押している
      %block{:type => 'hardware_button_down'}

      -# 条件:ボタン[▼]を離している
      %block{:type => 'hardware_button_up'}

      -# ボタン[▼]を押したとき
      %block{:type => 'hardware_on_button_down'}
        = toolbox_character_field

      -# ボタン[▼]を離したとき
      %block{:type => 'hardware_on_button_up'}
        = toolbox_character_field

    %category{:name => 'センサー'}
      -# センサー[▼PIN]
      %block{:type => 'hardware_sensor_value'}

      -# センサー[▼PIN]が変化したとき
      %block{:type => 'hardware_on_sensor_change'}
        = toolbox_character_field
